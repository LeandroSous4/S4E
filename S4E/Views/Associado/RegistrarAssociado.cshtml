@model AssociadoModel
@{
    ViewData["Title"] = "Registrar Associado";
}

<h2>Registrar Associado</h2>

<form asp-controller="Associado" asp-action="RegistrarAssociado">
    <div class="form-group">
        <label for="NomeAssociado">Associado: </label>
        <input type="text" class="form-control" asp-for="NomeAssociado" />
        <span asp-validation-for="NomeAssociado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="CPF">CPF: </label>
        <input type="text" maxlength="11" class="form-control" asp-for="CPF" />
        <span asp-validation-for="CPF" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="DataNascimento">Data de Nascimento: </label>
        <input type="datetime" placeholder="00/00/0000" class="form-control" asp-for="DataNascimento" />
        <span asp-validation-for="DataNascimento" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-block btn-success">Registrar</button>
</form>